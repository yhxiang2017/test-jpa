<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<Root>
    <!--- 本文件可以包含多个订单，也可以只包含一个，在包含多个的时候，我们要求这些订单的款式<Style>都相同 -->
    <!--- 每个订单对应一个Order结构 -->
    <!--- Person结构描述订单的客户信息 -->
    <!--- Fabrics结构描述订单的面料信息 -->
    <!--- Parts结构描述订单的部件选择信息 -->
    <!--- Measurement结构描述量体尺寸信息 -->
    <Orders>
        <Order>
            <Person>
                <ID>订单ID</ID>
                <Code>订单编号</Code>
                <Name>客户姓名</Name>
                <Phone>客户电话</Phone>
                <Remark>备注</Remark>
                <Copys>1（整数，件数）</Copys>
                <Style>款名</Style>
                <SizeName>100/73（套体号型，字符串）</SizeName>
            </Person>
            <Fabrics>
                <Fabric>
                    <Name>物料在CAD里面的名称(字符串)</Name>
                    <ID>物料在ERP当中的唯一标识(整数)</ID>
                    <Code>物料编码(字符串)</Code>
                    <Color>色号,有的ERP系统需要(物料编码+色号)才能唯一标定一个物料,有些ERP不需要,则此元素为空</Color>
                    <Width>幅宽,浮点数,厘米</Width>
                    <Dir>是否可以旋转</Dir>
                    <xShark>缩水</xShark>
                    <yShark>0.0200</yShark>
                    <xWidth>格子的宽度</xWidth>
                    <yWidth>10.0000</yWidth>
                </Fabric>
                <Fabric>
                    <Name>里A</Name>
                    <ID>1001</ID>
                    <Code>L3452</Code>
                    <Color></Color>
                    <Width>146.0000</Width>
                    <Dir>1</Dir>
                    <xShark>0.0100</xShark>
                    <yShark>0.0200</yShark>
                    <xWidth>0</xWidth>
                    <yWidth>0</yWidth>
                </Fabric>
            </Fabrics>
            <Parts>
                <!--- Name是部件组名 -->
                <!--- Select是部件名 -->
                <Part>
                    <Name>领子</Name>
                    <Select>圆领</Select>
                </Part>
                <Part>
                    <Name>袖子</Name>
                    <Select>两片袖</Select>
                </Part>
            </Parts>
            <Measurements>
                <Measurement>
                    <Name>胸围</Name>
                    <Mode>+表示Val是加减量，0表示Val是绝对值</Mode>
                    <Val>测量值</Val>
                    <Shark>缩水率</Shark>
                </Measurement>
                <Measurement>
                    <Name>肩宽</Name>
                    <Mode>+</Mode>
                    <Val>2</Val>
                    <Shark>-0.01</Shark>
                </Measurement>
                <Measurement>
                    <Name>衣长</Name>
                    <Mode>0</Mode>
                    <Val>60</Val>
                    <Shark>+0.02</Shark>
                </Measurement>
            </Measurements>
        </Order>
        <Order>
            <Person>
                <ID>订单ID</ID>
                <Code>订单编号</Code>
                <Name>客户姓名</Name>
                <Phone>客户电话</Phone>
                <Remark>备注</Remark>
                <Copys>1（整数，件数）</Copys>
                <Style>款名</Style>
                <SizeName>100/73（套体号型，字符串）</SizeName>
            </Person>
            <Fabrics>
                <Fabric>
                    <Name>面料</Name>
                    <ID>001</ID>
                    <Code>H3030T</Code>
                    <Color>红</Color>
                    <Width>180</Width>
                    <Dir>1</Dir>
                    <xShark>0.01</xShark>
                    <yShark>0.02</yShark>
                    <xWidth>8.0</xWidth>
                    <yWidth>10.0</yWidth>
                </Fabric>
                <Fabric>
                    <Name>里A</Name>
                    <ID>1001</ID>
                    <Code>L3452</Code>
                    <Color></Color>
                    <Width>146.0000</Width>
                    <Dir>1</Dir>
                    <xShark>0.0100</xShark>
                    <yShark>0.0200</yShark>
                    <xWidth>0</xWidth>
                    <yWidth>0</yWidth>
                </Fabric>
            </Fabrics>
            <Parts>
                <!--- Name是部件组名 -->
                <!--- Select是部件名 -->
                <Part>
                    <Name>领子</Name>
                    <Select>圆领</Select>
                </Part>
                <Part>
                    <Name>袖子</Name>
                    <Select>两片袖</Select>
                </Part>
            </Parts>
            <Measurements>
                <Measurement>
                    <Name>胸围</Name>
                    <Mode>+表示Val是加减量，0表示Val是绝对值</Mode>
                    <Val>测量值</Val>
                    <Shark>缩水率</Shark>
                </Measurement>
                <Measurement>
                    <Name>肩宽</Name>
                    <Mode>+</Mode>
                    <Val>2</Val>
                    <Shark>-0.01</Shark>
                </Measurement>
                <Measurement>
                    <Name>衣长</Name>
                    <Mode>0</Mode>
                    <Val>60</Val>
                    <Shark>+0.02</Shark>
                </Measurement>
            </Measurements>
        </Order>
    </Orders>
</Root>